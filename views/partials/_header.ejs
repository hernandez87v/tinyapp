      <div>
        <% if (user) { %>
        <form method="POST" action="/logout">
          <span class="navbar-brand">Logged in as:</span>
          <span class="navbar-brand"><%= user.email %></span>
          <form method="POST" action="/logout">
            <button class="btn btn-success" type="submit">
              <span class="navbar-brand">logout</span>
            </button>
        </form>
        <% } else { %>
        <button class="btn btn-success" type="submit">
