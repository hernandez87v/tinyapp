<header>
  <nav>
    <nav
      class="navbar navbar-expand-md navbar-dark shadow-lg p-3 mb-5 bg-success"
    >
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
      <div>
        <% if (user) { %>
        <form method="POST" action="/logout">
          <a class="btn btn-default">Logged In As: <%= user %>!</a>
          <button class="btn btn-success" type="submit">
            <span class="btn btn-outline-dark">logout</span>
          </button>
        </form>
        <% } else { %>
        <button class="btn btn-success" type="submit">
          <a href="/login" class="navbar-brand">Login</a>
        </button>
        <button class="btn btn-success" type="submit">
          <a href="/register" class="navbar-brand">Register</a>
        </button>
        <% } %>
      </div>
    </nav>
  </nav>
</header>
